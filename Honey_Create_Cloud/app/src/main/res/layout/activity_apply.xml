<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ApplyActivity">

    <ProgressBar
        android:id="@+id/newwebprogressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:progressDrawable="@drawable/progressbar" />

    <WebView
        android:id="@+id/new_Web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/web_error"
        layout="@layout/layout_load_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.8"
        android:background="@drawable/gird_radius"
        android:numColumns="3"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignRight="@id/fab_more"
        android:layout_alignBottom="@+id/fab_more"
        android:layout_marginRight="22dp"
        android:background="@android:color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="22dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="15dp"
            android:paddingRight="15sp"
            android:text="首页"
            android:textColor="@android:color/white"
            android:textSize="13dp" />

        <View
            android:layout_width="2px"
            android:layout_height="8dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tv_myPublish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="我的发表"
            android:textColor="@android:color/white"
            android:textSize="13dp" />

        <View
            android:layout_width="2px"
            android:layout_height="8dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tv_relation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="应用"
            android:textColor="@android:color/white"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_course_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_collection_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:color/black" />

        <TextView
            android:id="@+id/tt_course_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="暂时没有内容哦" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fab_more"
        android:layout_width="44dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="50dp"
        android:onClick="onClick"
        android:src="@mipmap/tabbar_contact_pressed" />


</RelativeLayout>