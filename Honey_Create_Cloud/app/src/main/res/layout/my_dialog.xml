<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_dialog_style"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="@string/liveback"
        android:textColor="#353535"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="恢复到默认设置。"
        android:textColor="#666666"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="继续支付"
            android:background="@drawable/text_background_false"
            android:textColor="@color/text_color_false"
            android:textSize="16sp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认离开"
            android:background="@drawable/text_background_true"
            android:textColor="@color/text_color_true"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

</LinearLayout>