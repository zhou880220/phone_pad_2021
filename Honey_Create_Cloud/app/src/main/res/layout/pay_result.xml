<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NavPage">

    <ImageView
        android:id="@+id/wechat_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/wechat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/wechat_img"/>

    <Button
        android:id="@+id/wechat_back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/wechat_but"
        android:layout_centerHorizontal="true"
        android:textColor="@color/wechat_button_color"
        android:text="@string/back_apply"/>

</RelativeLayout>